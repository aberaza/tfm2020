  file         = {:Su2018 - On Extended Long Short Term Memory and Dependent Bidirectional Recurrent Neural Network.pdf:PDF},
  journaltitle = {Neurocomputing 356 (2019): 151-161},
  keywords     = {cs.LG, cs.CL, cs.NE, stat.ML},
}

@Article{Cho2014b,
