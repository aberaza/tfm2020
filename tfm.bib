@Article{Bourke2010,
  author   = {A.K. Bourke and P. {van de Ven} and M. Gamble and R. O’Connor and K. Murphy and E. Bogan and E. McQuade and P. Finucane and G. ÓLaighin and J. Nelson},
  journal  = {Journal of Biomechanics},
